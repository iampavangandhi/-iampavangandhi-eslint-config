{
  "name": "eslint-config-iampavangandhi",
  "version": "1.0.1",
  "description": "ESLint & Prettier config for React & Next.js",
  "main": "index.js",
  "files": [
    "LICENSE",
    "README.md",
    "index.js",
    "lib",
    ".eslintignore",
    ".prettierrc",
    ".prettierignore"
  ],
  "scripts": {
    "style:all": "npm run style:lint && npm run style:prettier",
    "style:lint": "eslint --ignore-path .gitignore '**/*.{js,jsx,ts,tsx,json}'",
    "style:lint-all": "eslint --ignore-path .gitignore .",
    "style:prettier": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
    "style:prettier-all": "prettier --check .",
    "make-pretty": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "make-pretty-all": "prettier --write ."
  },
  "keywords": [
    "config",
    "eslint",
    "lint",
    "nextjs",
    "prettier"
  ],
  "peerDependencies": {
    "@babel/core": "^7.14.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.3.2"
  },
  "author": "Pavan Gandhi <pavangandhi100@gmail.com>",
  "license": "MIT"
}
